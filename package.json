{
  "name": "fe-boilerplate-poc",
  "version": "1.0.0",
  "description": "FE boilerplate test",
  "main": "index.js",
  "browserify-shim": {
    "jquery": "global:$"
  },
  "assetspaths": {
    "base": "assets/",
    "css": "css/",
    "js": "js/",
    "handlebars": "js/templates/",
    "svg": "svg/",
    "images": "images/"
  },
  "scripts": {
    "build": "npm run build:js -s; npm run build:css -s; npm run build:img -s; npm run build:hbs -s; npm run build:svg -s;",
    "build:js": "node assets/js/tasks/js.js",
    "build:css": "node assets/js/tasks/css.js",
    "build:img": "node assets/js/tasks/img.js",
    "build:hbs": "node assets/js/tasks/hbs.js",
    "build:svg": "node assets/js/tasks/svg.js",

    "watch": "parallelshell \"npm run watch:js -s\" \"npm run watch:hbs -s \" \"npm run watch:css -s \" \"npm run watch:img -s \" \"npm run watch:svg -s \"",
    "watch:js": "nodemon -s -q -x 'npm run build:js -s -- --watch'",
    "watch:hbs": "nodemon -s -q -x 'npm run build:hbs -s -- --watch'",
    "watch:css": "nodemon -s -q -x 'npm run build:css -s -- --watch'",
    "watch:img": "nodemon -s -q -x 'npm run build:img -s -- --watch'",
    "watch:svg": "nodemon -s -q -x 'npm run build:svg -s -- --watch'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iainvdw/fe-boilerplate-poc.git"
  },
  "author": "Iain van der Wiel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iainvdw/fe-boilerplate-poc/issues"
  },
  "homepage": "https://github.com/iainvdw/fe-boilerplate-poc#readme",
  "devDependencies": {
    "app-root-path": "^1.0.0",
    "chokidar": "^1.4.2",
    "colors": "^1.1.2",
    "handlebars": "^4.0.5",
    "jshint": "^2.9.1",
    "less": "^2.5.3",
    "less-plugin-clean-css": "^1.5.1",
    "node-notifier": "^4.4.0",
    "nsdeclare": "^0.1.0",
    "parallelshell": "^2.0.0",
    "shell-arguments": "^1.1.7"
  }
}
