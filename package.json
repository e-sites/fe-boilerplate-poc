{
  "name": "fe-boilerplate-poc",
  "version": "1.0.2",
  "description": "A collection of useful Gulp tasks to automate your front-end workflow",
  "author": "Iain van der Wiel <iain@e-sites.nl>",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/e-sites/fe-boilerplate-poc.git"
  },
  "license": "MIT",
  "config": {
    "js": {
      "entries": [
        "app.js"
      ],
      "vendor": [
        "./assets/js/polyfills/core-js",
        "svgxuse",
        "@e-sites/vestigo",
        "scriptjs",
        "conditioner-core"
      ]
    },
    "paths": {
      "tasks": "/tasks",
      "source": "./assets",
      "dist": "./build",
      "folders": {
        "css": "/css",
        "js": "/js",
        "images": "/images",
        "svg": "/svg",
        "mjml": "/path-to-mail"
      }
    },
    "revisionFiles": true,
    "mjml": {
      "enabled": false,
      "extension": ".twig"
    }
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 10"
  ],
  "devDependencies": {
    "@e-sites/eslint-config": "^1.0.0",
    "@e-sites/stylelint-config-esites": "^1.0.0",
    "@symfony/webpack-encore": "^0.16.0",
    "babel-plugin-dynamic-import-webpack": "^1.0.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "del": "^3.0.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-clean-css": "^3.9.0",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.4.0",
    "gulp-mjml": "^2.3.0",
    "gulp-notify": "^3.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-rev": "^8.0.0",
    "gulp-rev-delete-original": "^0.2.3",
    "gulp-rev-replace": "^0.4.3",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-svgstore": "^6.1.0",
    "gulp-tasker": "^0.3.0",
    "node-notifier": "^5.1.2",
    "stylelint": "^8.2.0",
    "stylelint-scss": "^2.1.0",
    "webpack-stream": "^4.0.0"
  },
  "dependencies": {
    "@e-sites/vestigo": "^0.1.0",
    "babel-polyfill": "^6.26.0",
    "bourbon": "4.3.4",
    "bourbon-neat": "1.9.0",
    "conditioner-core": "^2.0.9",
    "core-js": "^2.5.1",
    "element-dataset": "^2.2.6",
    "jquery": "^3.2.1",
    "normalize.css": "^7.0.0",
    "scriptjs": "^2.5.8",
    "svgxuse": "^1.2.6"
  }
}
